<?xml version="1.0" encoding="utf-8"?>
<com.ahao.shadowlayout.ShadowLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/text1"
        android:background="@drawable/blue_round_bg"
        app:layout_shadowColor="#8072D883"
        app:layout_shadowRadius="8dp"
        app:layout_shadowRoundRadius="5dp"
        app:layout_xOffset="-1dp"
        app:layout_yOffset="-1dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/text1"
        android:background="@drawable/blue_round_bg"
        app:layout_shadowColor="#80D87292"
        app:layout_shadowRadius="8dp"
        app:layout_shadowRoundRadius="5dp"
        app:layout_xOffset="-1dp"
        app:layout_yOffset="-1dp" />

    <com.ahao.shadowlayout.ShadowLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/red_round_bg"
            app:layout_shadowColor="#80A55454"
            app:layout_shadowRadius="8dp"
            app:layout_shadowRoundRadius="5dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/red_round_bg"
            app:layout_shadowColor="#80A55454"
            app:layout_shadowRadius="8dp"
            app:layout_shadowRoundRadius="5dp" />


    </com.ahao.shadowlayout.ShadowLinearLayout>
</com.ahao.shadowlayout.ShadowLinearLayout>