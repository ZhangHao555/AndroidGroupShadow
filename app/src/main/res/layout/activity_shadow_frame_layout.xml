<?xml version="1.0" encoding="utf-8"?>
<com.ahao.shadowlayout.ShadowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/red_round_bg_50"
        app:layout_shadowColor="#80A55454"
        app:layout_shadowRadius="4dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:layout_xOffset="1dp"
        app:layout_yOffset="1dp"
        app:layout_shadowRoundRadius="50dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/red_round_bg_50"
        app:layout_shadowColor="#80D5B928"
        app:layout_shadowRadius="4dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        app:layout_xOffset="1dp"
        app:layout_yOffset="1dp"
        app:layout_shadowRoundRadius="50dp" />


</com.ahao.shadowlayout.ShadowFrameLayout>